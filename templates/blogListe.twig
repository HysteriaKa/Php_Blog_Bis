{% extends 'base.twig' %}

{% block content %}

<section class="panel spotlight medium right" id="first" style="background-color: #7C6D75;">
    <div class="content span-15">
        <h1 class="major">Liste des articles</h1>

    </div>
    <div class="image filtered tinted" data-position="top left">


        <img src="public/images/pic02.jpg" alt="image " />

    </div>

    <div class="panel span-7">
        <article class="inner mt-1 mb-2 ml-2 mr-2">
            {% for article in data["posts"] %}

            <h3>{{ article.titre}}</h3>
            <p>{{article.chapo}}</p>
            <div class="">
                <div class="display: inline mb-2 ">
                    <span><a href="/article/{{ article.url }}" class="button">En d√©tail</a></span>
                    {% if data.role == 1 %}
                    <span><a href="/admin/edit_article/{{ article.id }}" class="button">Modifier</a></span>
                    <span><a href="/admin/delete_article/{{article.id}}" method="get" class="button">Supprimer</a></span>

                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </article>
    </div>

</section>

{% endblock %}