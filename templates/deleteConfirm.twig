<body>
  <div class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Suppression d'un commentaire</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>{{ data.message }} ?</p>
        </div>
        <div class="modal-footer">
          <form action="" method="POST">
            <button type="submit" method="post" class="btn btn-secondary" data-bs-dismiss="modal">Oui</button>
          </form>
          <button onclick="window.location.href='/article/{{ data.articleUrl }}'"  class="btn btn-primary">Non</button>
        </div>
      </div>
    </div>
  </div>
